@model KutuphaneYonetımSıstemı.Models.Genre

@{
  ViewBag.Title = "Edit Genre";
}

<h2>Edit Genre</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Genres" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="genre_name" class="control-label"></label>
                <input asp-for="genre_name" class="form-control" />
                <span asp-validation-for="genre_name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>