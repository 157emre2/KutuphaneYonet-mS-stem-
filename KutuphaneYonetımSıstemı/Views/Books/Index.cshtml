@model IEnumerable<KutuphaneYonetımSıstemı.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<h2>Books</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Book</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <h4>Kitap</h4>
            </th>
            <th>
                <h4>Yazar</h4>
            </th>
            <th>
                <h4>Tür</h4>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.book_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.book_author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.genre.genre_name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
